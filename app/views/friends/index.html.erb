<div class="row">
	<div class="col-md-2">
		<button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal">		
			<%= link_to  do%>
	  		<i class="fa fa-plus fa-5x" aria-hidden="true"></i>
	  	<% end %>
	  </button>
	</div>
	
	<div class="col-md-8">
		<h2>Friends</h2>
	</div>
</div>

<!-- Modal -->
	<div id="myModal" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">Find Friends</h4>
				</div>
				<div class="modal-body">
					<%= form_tag(url_for(controller: "friends", action: "search"), method: "post", remote: true) do %>
					<p>
						<%= text_field_tag(:q) %>
						<%= submit_tag  "Search" %>
					</p>
					<% end %>

					<div class="popup-container">	
					
					</div>

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
<!-- Model end -->
<%@friends.each do |friend|%>
	<div class = 'col-md-6 '>
			<div class='row border-1px'>
				<div class='col-md-4 image'>
					 <% if friend.avater.present? %>
	    		 <%= image_tag "/uploads/#{friend.avater}", class: 'img-thumbnail'	%>
	    	   <%	end %>
	    	</div>

				<div class='col-md-4 image'>
					<p><%= friend.firstname	%></p>
				</div>

				<div class='col-md-2'>
					<%= link_to 'Remove Friend', user_friend_path(id: friend.id) , method: :delete, data: { confirm: 'Remove Friend?' } ,class: "btn btn-danger btn-sm remove-friend" %>
				</div>
			</div>
	</div>
<% end %>