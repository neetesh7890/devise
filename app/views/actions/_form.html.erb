<%= form_for @user, url:  {controller: "sessions", action: "create"}, method: "post"  do |f| %>
  <div class="row color-e9e2e2">
    <div class="col-md-12">
      <br><br>
      <br>
    </div>

    <div class="col-md-12">
      <h1 style="text-align: center;">Login Here...</h1>  
    </div>

    <div class="col-md-4 col-md-offset-5">
      <%= image_tag "/uploads/img_a.png", height: "200", width: "200" %>
    </div>

    <div class="col-md-4 col-md-offset-5">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>

    <div class="col-md-4 col-md-offset-5">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>

    <div class="col-md-4 col-md-offset-5">
    <br>
    </div>

    <div class="col-md-4 col-md-offset-5">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %> 
      <%= f.submit "Log In" %>
    </div>
    <div class="col-md-4 col-md-offset-5">
    <br>
    </div>
    <div class="col-md-2 col-md-offset-5">
      <%= link_to 'Forgot Password', new_action_path %> 
    </div>
    <div class="col-md-1">
      <%= link_to 'Sign Up', new_user_path %>
    </div>
    <div class="col-md-12">
    <br><br><br><br><br><br>
    </div>
  </div>
<% end %>
